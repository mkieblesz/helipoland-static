root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.y*ml|*.toml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4
